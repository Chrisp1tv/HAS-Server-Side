{% extends "base.html.twig" %}

{% block title %}
    {{ 'administrators'|trans }}
{% endblock %}

{% block main %}
    <div class="spaced-link-buttons-group device-mobile">
        <a href="{{ path('administrators_new') }}" class="link-button">{{ 'newAdministrator'|trans }}</a>
    </div>

    <table class="table-alternate-rows">
        <tr>
            <th>{{ 'name'|trans }}</th>
            <th>{{ 'actions'|trans }}</th>
        </tr>
        {% for administrator in administrators.results %}
            <tr>
                <td>{{ administrator.username }}</td>
                <td>
                    <a class="link-button"
                       href="{{ path('administrators_show', {id: administrator.id}) }}">{{ 'show'|trans }}</a>
                    <a class="link-button"
                       href="{{ path('administrators_toggle_status', {id: administrator.id}) }}">{{ (administrator.isDisabled ? 'enable' : 'disable')|trans }}</a>
                </td>
            </tr>
        {% endfor %}
    </table>

    {{ pagination(administrators) }}
{% endblock %}