<!doctype html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('css/styles.css') }}"/>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet" type="text/css"/>
    <link rel="shortcut icon" href="{{ asset('img/favicon.ico') }}"/>
    {% if app.request.attributes.get('_route') is not empty and app.request.attributes.get('_route_params') is not empty %}
        <link rel="canonical"
              href="{{ url(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}"/>
    {% endif %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{% endblock %} - {{ 'alertSystem'|trans }}</title>
    {% if app.request.attributes.get('_route') is not empty and app.request.attributes.get('_route_params') is not empty %}
        <meta property="og:url"
              content="{{ url(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}"/>
    {% endif %}
</head>
<body>
{% spaceless %}
    {% for type, messages in app.session.flashBag.all %}
        {%- if loop.first %}
            <div class="top-overlay">
        {% endif %}
        {% for message in messages %}
            {% include "common/modules/flash-message.html.twig" with {type:type, content:message} only %}
        {% endfor %}
        {% if loop.last %}
            </div>
        {% endif %}
    {% endfor %}
{% endspaceless %}
<header class="l-header">
    <nav role="navigation">
        <ul class="l-header-horizontal-menu">
            <li><a href="{{ path('homepage') }}">{{ 'homepage'|trans }}</a></li>
            <li><a href="{{ path('administrators_index') }}">{{ 'administrators'|trans }}</a></li>
            <li><a href="{{ path('campaings_index') }}">{{ 'campaigns'|trans }}</a></li>
            <li><a href="{{ path('recipients_index') }}">{{ 'recipients'|trans }}</a></li>
            <li><a href="{{ path('recipient_groups_index') }}">{{ 'recipientGroups'|trans }}</a></li>
        </ul>
    </nav>
</header>
<div class="l-main">
    {% block main %}{% endblock %}
</div>
<footer class="l-footer">
    <p>{{ 'realization'|trans }} <a href="{{ christopheranciauxgithublink }}">Christopher Anciaux</a> {{ 'and'|trans }}
        <a href="{{ alexandreszymuragithub }}">Alexandre Szymura</a>
    </p>
</footer>
{% block javascripts %}{% endblock %}
</body>
</html>
